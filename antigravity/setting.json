{
  "files.autoSave": "afterDelay",
  "editor.inlineSuggest.enabled": true,

  // --- 1. GIAO DIỆN & THEME (Catppuccin) ---
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",
  "workbench.activityBar.location": "top",
  "window.titleBarStyle": "custom",

  // --- 2. FONT & TYPOGRAPHY (Tối ưu đọc code) ---
  // Ưu tiên JetBrains Mono (hỗ trợ Ligatures tốt nhất), sau đó đến Fira Code
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Fira Code', 'Cascadia Code', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": "400",

  // --- 3. EDITOR BEHAVIOR ---
  "editor.cursorBlinking": "smooth", 
  "editor.cursorSmoothCaretAnimation": "on", 
  "editor.cursorStyle": "line",
  "editor.smoothScrolling": true, 
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false, 
  "editor.renderWhitespace": "selection", 
  
  // Bracket Pair (Quan trọng cho Rust/Svelte)
  // "editor.guides.bracketPairs": true,
  // "editor.bracketPairColorization.enabled": true,

  // --- 4. TERMINAL (Ghostty-like experience) ---
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block", 
  "terminal.integrated.gpuAcceleration": "on", 

  // --- RUST ---
  "rust-analyzer.check.command": "clippy", 
  "rust-analyzer.cargo.buildScripts.enable": true,
  "rust-analyzer.procMacro.enable": true,

  // --- GOLANG ---
  "go.useLanguageServer": true,
  // "go.lintOnSave": "package",
  "go.toolsManagement.autoUpdate": true,
  "gopls": {
    "ui.semanticTokens": true,
    "ui.completion.usePlaceholders": true
  },

